{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Werror",
                "-DDEBUG",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-I${workspaceFolder}/include/**",
                "-I/usr/include/**",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "${workspaceFolder}/src/*.cpp",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}